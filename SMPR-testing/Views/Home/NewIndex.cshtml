@{
    ViewBag.Title = "Theory of Decision Making";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<!-- Login/sign up popup -->
<div class="modal fade" id="login-popup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Greetings, student!</h4>
            </div>
            <div class="modal-body">
                <div role="tabpanel">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#log-in" aria-controls="home" role="tab" data-toggle="tab">Log in</a></li>
                        <li role="presentation"><a href="#sign-up" aria-controls="profile" role="tab" data-toggle="tab">Sign up</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="log-in">
                            <form action="" method="post">
                                <div class="form-group">
                                    <label for="inputEmail1">Email address</label>
                                    <input type="email" class="form-control" id="inputEmail1" placeholder="example@ukr.net">
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword1">Password</label>
                                    <input type="password" class="form-control" id="inputPassword1" placeholder="myCat Justin">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="sign-up">
                            <form action="" method="post">
                                <div class="form-group">
                                    <label for="inputName">Name</label>
                                    <input type="email" class="form-control" id="inputName" placeholder="Dmytro Yarosh">
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail2">Email address</label>
                                    <input type="email" class="form-control" id="inputEmail2" placeholder="example@ukr.net">
                                </div>
                                <!-- todo: don't forget to check passwords are they same or not -->
                                <div class="form-group">
                                    <label for="inputPassword2">Password</label>
                                    <input type="password" class="form-control" id="inputPassword2" placeholder="myCat Justin">
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3">Repeat password</label>
                                    <input type="password" class="form-control" id="inputPassword3" placeholder="myCat Justin">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="first-screen">
    <div class="container-fluid first-bg"></div>
    <div class="container-fluid main-screen-bg"></div>
    <div class="container content">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <h1>Онлайн тестування</h1>
                @*<h2>test your skills <span class="sea-wave">and</span> knowledge</h2>*@
            </div>
            <div class="col-xs-12">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-primary start-btn" href="@Url.Action("Register", "Account")">Реєстрація</a>
                }
                else if (Roles.IsUserInRole("lecturer") || Roles.IsUserInRole("admin"))
                {
                    <a class="btn btn-primary start-btn" href="@Url.Action("QuestionList", "Test")">Список питань</a>
                }
                else
                {
                    <a class="btn btn-primary start-btn" href="@Url.Action("Index", "Test")">Пройти тест</a>
                }
                @*<button class="btn btn-primary start-btn" data-toggle="modal" data-target="#login-popup">START NOW</button>*@
            </div>
            @if (!User.Identity.IsAuthenticated)
            {             
                <div class="col-xs-12" style="margin-top:20px">
                    <a class="btn btn-primary start-btn" href="@Url.Action("Login", "Account")">Вхід</a>
                </div>
            }
        </div>
    </div>
</div>
<div class="container how-it-works">
    <div class="row">
        <div class="col-sm-12">
            <h2>HOW IT WORKS</h2>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-4">
            <img src="Content/img/Student-Laptop.png">
            <p>Register</p>
        </div>
        <div class="col-sm-12 col-md-4">
            <img src="Content/img/Note-Memo.png">
            <p>Complete test</p>
        </div>
        <div class="col-sm-12 col-md-4">
            <img src="Content/img/Award.png">
            <p>Check results</p>
        </div>
    </div>
</div>
<footer class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <p>Theory of decision making</p>
        </div>
    </div>
</footer>